<h1>Edit Announcement</h1>
<div class="contentlines"></div>
<% form_for(@announcement) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :contents %><br />
    <%= f.text_area :contents, :rows => 6 %>
  </p>
  <p>
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date, :order => [:month, :day, :year] %>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date, :order => [:month, :day, :year] %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @announcement %> |
<%= link_to 'Back', announcements_path %>